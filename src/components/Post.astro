---
import { getPostData } from '../lib/firebase.js'; 
import PostCard from '../components/PostCard.astro'; 
const posts = await getPostData(); 
---

<!-- Main Content -->
<div class="container mx-auto py-6">
  <h1 class="text-4xl font-bold text-center mb-8">Publicaciones Recientes</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {posts.length > 0 ? (
      posts.map((post) => (
        <PostCard
          key={post.id}
          title={post.title}
          description={post.description}
          image={post.image}
          slug={post.slug}
          class="h-full flex flex-col justify-between bg-white shadow-md rounded-lg overflow-hidden"
        />
      ))
    ) : (
      <p class="text-center text-xl">No hay publicaciones disponibles.</p>
    )}
  </div>
</div>
