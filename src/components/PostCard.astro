---
import FavoriteButton from '../components/FavoriteButton.jsx';    
const { title, description, image, slug } = Astro.props;
---

<section id="ultimosPosts">
  <article class="h-full flex flex-col justify-between bg-white shadow-lg rounded-lg overflow-hidden">
    <!-- Imagen del post -->
    <img 
      src={image} 
      alt={title} 
      class="w-full h-48 object-cover"
    />
    <div class="p-4 flex flex-col justify-between flex-grow">
      <!-- Título y descripción -->
      <h2 class="text-lg font-bold text-gray-900">{title}</h2>
      <p class="text-gray-600 mt-2">{description.substring(0, 100)}...</p>

     
      <!-- Botón de favorito -->
      <div class="mt-4 flex justify-end">
        <FavoriteButton client:load />
      </div>
      

      <!-- Enlace "Leer más" -->
      <a href={`/blog/${slug}`} class="text-blue-500 hover:underline mt-auto">Leer más</a>
    </div>
  </article>
</section>
